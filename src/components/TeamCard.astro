---
export interface Props {
	title: string;
	description: string;
	content: string;
}

const { title, description, content } = Astro.props as Props;
---

<div class="opacity-0 transition-opacity duration-1000">
	<div class="w-80 h-52" id="flip">
		<div class="w-full h-full text-center" id="inner">
			<div class="flex rounded-lg bg-surface0 bg-opacity-40" id="front">
				<div class="m-auto flex flex-col">
					<h2 class="text-4xl text-yellow neon">
						{title}
					</h2>
					<p class="text-xl text-peach neon">
						{description}
					</p>
				</div>
			</div>
			<div class="flex rounded-lg bg-surface0 bg-opacity-40" id="back">
				<h2 class="m-auto p-4 neon">
					{content}
				</h2>
			</div>
		</div>
	</div>
</div>

<style>
	#flip {
		perspective: 1000px;
	}

	#inner {
		transition: transform 0.8s;
		transform-style: preserve-3d;
	}

	#flip:hover #inner {
		transform: rotateY(180deg);
	}

	#front,
	#back {
		position: absolute;
		width: 100%;
		height: 100%;
		backface-visibility: hidden;
	}

	#front {
		transform: rotateY(360deg);
	}

	#back {
		transform: rotateY(180deg);
	}
</style>
